citHeader("To cite glottoTrees and Glottolog in publications use:")

citEntry(entry = "Manual",
         title = "{glottoTrees}: Phylogenetic trees in Linguistics.",
         author = personList(as.person("Erich R. Round")),
         year = "2021",
         note = "R package version 0.1",
         url = "https://github.com/erichround/glottoTrees",

         textVersion  =
           paste("Round, Erich R. (2021)",
                 "{glottoTrees}: Phylogenetic trees in Linguistics.",
                 "R package version 0.1",
                 "URL https://github.com/erichround/glottoTrees")
)

citEntry(entry = "Book",
         title = "Glottolog 4.8.",
         author = personList(
           as.person(c("Harald Hammarström", "Robert Forkel", 
                     "Martin Haspelmath", "Sebastian Bank"))
           ),
         year = "2023",
         address = "Leipzig",
         publisher = "Max Planck Institute for Evolutionary Anthropology",
         note = "R package version 0.1",
         url = "https://doi.org/10.5281/zenodo.596479",

         textVersion  =
           paste("Hammarström, Harald & Forkel, Robert & Haspelmath, Martin & Bank, Sebastian. (2023)",
                 "Glottolog 4.8.",
                 "Leipzig: Max Planck Institute for Evolutionary Anthropology.",
                 "URL https://doi.org/10.5281/zenodo.596479")
)